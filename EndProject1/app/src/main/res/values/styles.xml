<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTitle</item>
        <item name="colorPrimaryDark">@color/colorTop</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title">
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/colorTitle</item>
    </style>
    <style name="titleText">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="actionBlock">
        <item name="android:padding">23dp</item>
        <item name="android:background">@drawable/boxbg</item>
    </style>
    <style name="blockText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>
    <style name="information">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
